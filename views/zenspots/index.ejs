<% layout('/layouts/boilerplate') %>
<h1 class="text-center">Zenspots near Brisbane, Queensland</h1>

<div class="row row-cols-1 row-cols-md-3 g-2">
    <% for (let zenspot of zenspots){%>
    <div class="col">
        <div class="card">
            <img src="<%= zenspot.image %>" alt="" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title"><%= zenspot.title %></h5>
                <p class="card-text" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                    <%= zenspot.description %></p>
                <a href="/zenspots/<%= zenspot._id%>" class="btn btn-primary">See Zenspot</a>
            </div>
        </div>
    </div>
    <% }%>
</div>